<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        /* Centering the container */
        .container {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            min-height: 100vh;
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        /* Style for the content area */
        .content {
            text-align: left;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 45%;
            width: 100%;
        }

        h2, h3 {
            margin: 0 0 10px;
        }

        ul {
            list-style-type: none;
            padding-left: 0;
        }

        li {
            margin-bottom: 15px;
        }

        /* Styling for the loan offers */
        .loan-offers {
            margin-top: 20px;
        }

        .loan-offer {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            background-color: #f9f9f9;
        }

        .loan-offer h4 {
            margin: 0;
        }

        .loan-offer p {
            margin: 5px 0;
        }

        /* Add some spacing between the columns */
        .column {
            flex: 1;
            margin-right: 20px;
        }

        .column:last-child {
            margin-right: 0;
        }

        /* Small screen styling */
        @media (max-width: 768px) {
            .container {
                flex-direction: column;
                align-items: center;
            }

            .content {
                max-width: 100%;
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Column for user financial info -->
        <div class="column content">
            <h2>Welcome, <%= username %></h2>

            <h3>Financial Information</h3>
            <p>Monthly Income: <%= financialInfo.MonthlyIncome %></p>
            <p>Monthly Expenditures: <%= financialInfo.MonthlyExpend %></p>
            <p>Loan Request: <%= financialInfo.LoanRequest %></p>
            <p>Outstanding Debt: <%= financialInfo.outstandingDebt %></p>
            <p>Total Assets: <%= financialInfo.totalAssets %></p>
            <p>Total Liabilities: <%= financialInfo.totalLiabilities %></p>
            <h3>CibilScore: <%= cibilscore %></h3>

            <h3>Loan History</h3>
            <ul>
                <% Object.keys(financialInfo.loanHistory).forEach(loanKey => { %>
                    <li>
                        <p>Loan Type: <%= financialInfo.loanHistory[loanKey].LoanType %></p>
                        <p>Loan Amount: <%= financialInfo.loanHistory[loanKey].LoanAmount %></p>
                        <p>Status: <%= financialInfo.loanHistory[loanKey].loanStatus %></p>
                        <p>Start Date: <%= financialInfo.loanHistory[loanKey].startDate %></p>
                        <p>End Date: <%= financialInfo.loanHistory[loanKey].endDate %></p>
                        <p>Interest Rate: <%= financialInfo.loanHistory[loanKey].interestRate %>%</p>
                    </li>
                <% }) %>
            </ul>

        </div>

        <!-- Column for loan offers -->
        <div class="column content loan-offers">
            <h3>Available Loan Offers</h3>
            <% if (loanOffers.length > 0) { %>
                <% loanOffers.forEach(offer => { %>
                    <div class="loan-offer">
                        <h4><%= offer.bankName %> - <%= offer.loan_type %></h4>
                        <p>Interest Rate: <%= offer.interest_rate %>%</p>
                        <p>Loan Amount Range: ₹<%= offer.min_loan_amount %> - ₹<%= offer.max_loan_amount %></p>
                        <p>Term: <%= offer.term.min_years %> to <%= offer.term.max_years %> years</p>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No loan offers available based on your financial profile.</p>
            <% } %>
        </div>
    </div>
</body>
</html>
